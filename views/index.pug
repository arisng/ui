doctype html
html
  head
    title Master Index
    style.
      body {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        padding: 10px;
      }
      .folder-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 200px;
        border: 1px solid #000;
        margin: 10px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
        cursor: pointer;
        transition: background-color 0.3s ease;
      }
      .folder-card:hover {
        background-color: #f0f0f0;
      }
      @media (max-width: 600px) {
        .folder-card {
          width: 100%;
        }
      }
  body
    each directory in directories
      div.folder-card(onclick=`window.open("${directory.name}", "_blank")`)
        h2= directory.name